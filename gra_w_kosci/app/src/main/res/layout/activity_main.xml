<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#F5F5DC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#A52A2A"
        android:gravity="center"
        android:text="Gra w kości. Autor: Bartosz Wiaderny"
        android:textColor="#F8F7F7"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />

    <Button
        android:id="@+id/rzut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rzuć kościami"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/diceContainer"
        android:background="#F5F5DC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/kostk1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="?"
            android:textSize="48sp"
            android:layout_margin="9dp"
            tools:layout_editor_absoluteY="215dp" />

        <TextView
            android:id="@+id/kostk2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:gravity="center"
            android:text="?"
            android:textSize="48sp"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="227dp" />

        <TextView
            android:id="@+id/kostk3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="?"
            android:textSize="48sp"
            android:layout_margin="9dp"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="214dp" />

        <TextView
            android:id="@+id/kostk4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="?"
            android:textSize="48sp"
            android:layout_margin="9dp"
            tools:layout_editor_absoluteX="278dp"
            tools:layout_editor_absoluteY="239dp" />

        <TextView
            android:id="@+id/kostk5"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="?"
            android:textSize="48sp"
            android:layout_margin="9dp"
            tools:layout_editor_absoluteX="343dp"
            tools:layout_editor_absoluteY="215dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/wynik_los"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wynik tego losowania: 0"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="305dp" />

    <TextView
        android:id="@+id/wynik_gry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wynik gry: 0"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="339dp" />

    <TextView
        android:id="@+id/l_rzut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liczba rzutów: 0"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="388dp" />

    <Button
        android:id="@+id/reset_wynik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resetuj wynik" />

</LinearLayout>
